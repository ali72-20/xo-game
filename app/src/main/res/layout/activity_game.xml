<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">


    <include layout="@layout/app_bar"
        android:id="@+id/app_bar_til"
        />

    <LinearLayout
        android:id="@+id/liner_lauout_contaier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_bar_til"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/frist_palyer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_playerName"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/first_playerName"
            android:layout_marginStart="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/second_palyer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_playername"
            android:layout_marginStart="32dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="second palyer"
            android:layout_marginStart="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </LinearLayout>

        <TextView
            android:id="@+id/turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/liner_lauout_contaier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            tools:text = "Player name"
            android:textSize="32sp"
            android:textStyle="bold"
            />
    <LinearLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/liner_lauout_contaier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="148dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/grid_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cell_11"
                android:backgroundTint="@color/black"
                app:cornerRadius="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cell_12"
                android:backgroundTint="@color/black"
                android:layout_marginStart="16dp"
                app:cornerRadius="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cell_13"
                android:backgroundTint="@color/black"
                android:layout_marginStart="16dp"
                app:cornerRadius="0dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/grid_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cell_21"
                android:backgroundTint="@color/black"
                app:cornerRadius="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cell_22"
                android:backgroundTint="@color/black"
                android:layout_marginStart="16dp"
                app:cornerRadius="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cell_23"
                android:backgroundTint="@color/black"
                android:layout_marginStart="16dp"
                app:cornerRadius="0dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/grid_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cell_31"
                android:backgroundTint="@color/black"
                app:cornerRadius="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cell_32"
                android:backgroundTint="@color/black"
                android:layout_marginStart="16dp"
                app:cornerRadius="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cell_33"
                android:backgroundTint="@color/black"
                android:layout_marginStart="16dp"
                app:cornerRadius="0dp"
                />
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>